{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["lib/*"],
      "supabase/*": ["supabase/*"]
    }
  },
  "include": [
    "lib/**/*",
    "supabase/functions/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "android",
    "ios",
    ".dart_tool"
  ],
  "ts-node": {
    "esm": true
  }
} 